{
  "name": "yubista2020",
  "version": "1.0.0",
  "description": "This is our company's brand new project called YubiSta and it has been developed in Mongolian branch.",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "start": "node -r dotenv/config dist/server/server.js dotenv_config_path=./src/server/config/.env.dev",
    "start:test": "node -r dotenv/config dist/server/server.js dotenv_config_path=./src/server/config/.env.test",
    "start:stage": "node -r dotenv/config dist/server/server.js dotenv_config_path=./src/server/config/.env",
    "start:prod": "node -r dotenv/config dist/server/server.js dotenv_config_path=./src/server/config/.env",
    "watch-node": "nodemon -r dotenv/config dist/server/server.js dotenv_config_path=./src/server/config/.env.dev",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && ./node_modules/.bin/eslint \"**/*.{js,ts}\" --quiet --fix  && echo 'Coding convention passed!'",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "eysdevpro2@eysdevpro2.git.backlog.jp:/FIRST/yubista2020.git"
  },
  "author": "Undarmaa Baatarchuluun, Purevdondov Enkhbayar, Tenuun Khangaitan, Bat-Orshikh Baavgaikhuu",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/concurrently": "^4.1.0",
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.1.3",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.21",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.7.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.3",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2"
  }
}
